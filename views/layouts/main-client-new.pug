        meta(property='fb:app_id' content='473200492729081')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
        link(rel='stylesheet' href='/stylesheets/css/index-new.css')
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
        style.
            .price-uah {
                font-size: 20px !important;
                font-weight: bold;
            }
            .price-usd, .price-eur {
                font-size: 16px !important;
            }
            
            /* Mobile layout for currency display */
            @media (max-width: 768px) {
                .step-header-prices {
                    display: flex !important;
                    flex-direction: column !important;
                    align-items: center !important;
                    gap: 8px !important;
                    text-align: center !important;
                }
                
                /* First line: UAH only */
                .step-header-prices .price-uah {
                    order: 1 !important;
                    display: block !important;
                    width: 100% !important;
                    text-align: center !important;
                    margin-bottom: 5px !important;
                }
                
                /* Second line: USD and EUR together - force them to be inline */
                .step-header-prices .price-usd,
                .step-header-prices .price-eur {
                    order: 2 !important;
                    display: inline !important;
                    margin: 0 5px !important;
                }
                
                /* Force USD and EUR to be on the same line */
                .step-header-prices .dollar_price,
                .step-header-prices .eur_price {
                    display: inline !important;
                    white-space: nowrap !important;
                }
                
                /* Ensure UAH is on its own line */
                .step-header-prices .hrn_price {
                    display: block !important;
                    width: 100% !important;
                }
            }
            
            /* Extra small mobile devices */
            @media (max-width: 480px) {
                .step-header-prices .price-usd,
                .step-header-prices .price-eur {
                    margin: 0 5px !important;
                    font-size: 14px !important;
                }
                
                .step-header-prices .price-uah {
                    font-size: 18px !important;
                }
            }
