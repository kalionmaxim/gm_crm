        meta(property='og:title', content=(labels.title || ""))
        meta(property='og:description', content=(labels.title || ""))
        meta(property='og:image' content='https://genius.space/wp-content/uploads/2021/08/ogimage-geniusspace.png')
        meta(property='og:url' content='https://genius.space/')
