        style.
            .price-uah {
                font-size: 20px !important;
                font-weight: bold;
            }
            .price-usd, .price-eur {
                font-size: 16px !important;
            }
            
            /* Desktop layout - all currencies on one line */
            .step-header-prices {
                display: flex !important;
                align-items: center !important;
                justify-content: center !important;
                gap: 10px !important;
                flex-wrap: nowrap !important;
            }
            
            .step-header-prices .hrn_price,
            .step-header-prices .dollar_price,
            .step-header-prices .eur_price {
                display: inline-block !important;
                white-space: nowrap !important;
            }
            
            /* Mobile layout for currency display - Nuclear approach */
            @media (max-width: 768px) {
                /* Reset everything */
                .step-header-prices {
                    display: block !important;
                    text-align: center !important;
                    line-height: 1.4 !important;
                }
                
                .step-header-prices * {
                    float: none !important;
                    clear: none !important;
                    position: static !important;
                }
                
                /* UAH on its own line */
                .step-header-prices .hrn_price {
                    display: block !important;
                    width: 100% !important;
                    text-align: center !important;
                    margin-bottom: 8px !important;
                }
                
                /* Create a virtual container for USD and EUR */
                .step-header-prices .dollar_price {
                    display: inline !important;
                    white-space: nowrap !important;
                    margin-right: 5px !important;
                }
                
                .step-header-prices .eur_price {
                    display: inline !important;
                    white-space: nowrap !important;
                    margin-left: 0 !important;
                }
                
                /* Hide all pseudo-elements that could add line breaks */
                .step-header-prices .dollar_price::before,
                .step-header-prices .dollar_price::after,
                .step-header-prices .eur_price::before,
                .step-header-prices .eur_price::after {
                    display: none !important;
                    content: "" !important;
                }
            }
            
        script.
            // JavaScript solution for mobile currency layout
            function fixMobileCurrencyLayout() {
                if (window.innerWidth <= 768) {
                    const pricesContainer = document.querySelector('.step-header-prices');
                    if (pricesContainer) {
                        const uah = pricesContainer.querySelector('.hrn_price, #hrn_price');
                        const usd = pricesContainer.querySelector('.dollar_price, #dollar_price');
                        const eur = pricesContainer.querySelector('.eur_price, #eur_price');
                        
                        if (uah && usd && eur) {
                            // Force UAH on its own line
                            uah.style.display = 'block';
                            uah.style.width = '100%';
                            uah.style.textAlign = 'center';
                            uah.style.marginBottom = '8px';
                            
                            // Force USD and EUR inline on same line
                            usd.style.display = 'inline';
                            usd.style.marginRight = '5px';
                            eur.style.display = 'inline';
                            eur.style.marginLeft = '0';
                            
                            // Add separator
                            if (!eur.querySelector('.js-separator')) {
                                const separator = document.createElement('span');
                                separator.className = 'js-separator';
                                separator.textContent = ' / ';
                                eur.insertBefore(separator, eur.firstChild);
                            }
                        }
                    }
                }
            }
            
            // Run on page load and resize
            document.addEventListener('DOMContentLoaded', fixMobileCurrencyLayout);
            window.addEventListener('resize', fixMobileCurrencyLayout);
            setTimeout(fixMobileCurrencyLayout, 100); // Fallback
        
        style.
            /* Extra small mobile devices */
            @media (max-width: 480px) {
                .step-header-prices .price-usd,
                .step-header-prices .price-eur {
                    margin: 0 5px !important;
                    font-size: 14px !important;
                }
                
                .step-header-prices .price-uah {
                    font-size: 18px !important;
                }
            }
