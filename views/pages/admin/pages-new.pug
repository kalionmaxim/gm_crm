extends ../../layouts/main-admin

block contents
	// Preloader
	.preloader
		.cssload-speeding-wheel
			link(rel='stylesheet', href='/stylesheets/css/jquery.clockpicker.css')

	#wrapper
		include ./../../partials/admin/header
		include ./../../partials/admin/aside-menu

		// Page Content
		#page-wrapper
			.container-fluid
				.row.bg-title
					.col-lg-12.col-md-12.col-sm-12.col-xs-12
						h4.page-title Создание новой страницы
				.row
					.col-md-12
						.white-box
							form.form-horizontal(method='post', action='/admin/pages/new')
								.row
									.col-md-12
										.form-group
											label.col-md-2.control-label Название продукта:
											.col-md-10
												input.form-control(name='name' placeholder='Введите название продукта' required=true)
										.form-group
											label.col-md-2.control-label Описание:
											.col-md-10
												textarea.form-control(name='description' placeholder='Введите описание продукта')
										.form-group
											label.col-md-2.control-label Цена, USD:
											.col-md-10
												input.form-control(name='price' type="number" min=37.04 step=0.01 placeholder='Введите цену продукта' required=true)

										hr
										.form-group
											label.col-md-2.control-label GetResponse – токен кампании ДО оплаты:
											.col-md-10
												input.form-control(name='gr1' placeholder='Введите токен кампании')
										.form-group
											label.col-md-2.control-label GetResponse – токен кампании ПОСЛЕ оплаты:
											.col-md-10
												input.form-control(name='gr2' placeholder='Введите токен кампании')

										hr
										.form-group
											label.col-md-2.control-label CRM – ID папки ДО оплаты:
											.col-md-10
												input.form-control(name='crm1' placeholder='Введите ID папки')
										.form-group
											label.col-md-2.control-label CRM – ID папки ПОСЛЕ оплаты:
											.col-md-10
												input.form-control(name='crm2' placeholder='Введите ID папки')

										hr
										.form-group
											label.col-md-2.control-label Количество частей рассрочки:
											.col-md-10
												select.form-control(name="parts")
													option(value=5) 5
													option(value=4) 4
													option(value=3) 3
													//option(value=2) 2
										//.form-group.formgroup-checkbox.checkbox.checkbox-success
											p.col-md-2.control-label Количество частей рассрочки:
											.col-md-10
												ul.checkbox-block
													li
														input(type="checkbox" name="parts" value="2" id="plan-checkbox-2")
														label(for="plan-checkbox-2")= 2
													li
														input(type="checkbox" name="parts" value="3" id="plan-checkbox-3")
														label(for="plan-checkbox-3")= 3
													li
														input(type="checkbox" name="parts" value="4" id="plan-checkbox-4")
														label(for="plan-checkbox-4")= 4


								.form-group.m-b-0
									.col-md-offset-2.col-md-10
										button.btn.btn-success.btn-lg.waves-effect.waves-light.m-t-10(type='submit') Создать


		include ./../../partials/admin/footer
