extends ../../layouts/main-admin

block contents
	// Preloader
	.preloader
		.cssload-speeding-wheel

	#wrapper
		include ./../../partials/admin/header
		include ./../../partials/admin/aside-menu

		// Page Content
		#page-wrapper
			.container-fluid
				.row.bg-title
					.col-lg-3.col-md-4.col-sm-4.col-xs-12
						h4.page-title Список мерчантов Plata
					.col-lg-9.col-sm-8.col-md-8.col-xs-12
						ol.breadcrumb
							li.active Все мерчанты Plata
				.row
					.form-group
						.col-sm-4.m-b-20
							a.btn.btn-block.btn-outline.btn-rounded.btn-info.btn-lg(href="/admin/plata-merchants/new") Создать новый

				.row
					.col-sm-12
						.white-box
							.table-responsive
								table#table_merchants.table.table-striped
									thead
										tr
											th ID мерчанта
											th Токен
											th Действия


		include ./../../partials/admin/footer

		script(src='/plugins/bower_components/datatables/jquery.dataTables.min.js')
		script(src="/js/pages/admin/plata-merchants-list.js")