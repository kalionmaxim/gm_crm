        $('#wfpForm [name="productPrice"]').each(function() {
            productPrice += ';' + $(this).val();
        });

        var baseString =
            merchantAccount + ';' +
            merchantDomainName + ';' +
            orderReference + ';' +
            orderDate + ';' +
            amount + ';' +
            currency +
            productName +
            productCount +
            productPrice;

